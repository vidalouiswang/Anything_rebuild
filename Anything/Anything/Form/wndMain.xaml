<Window x:Class="Anything.Form.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Anything.Form"
        xmlns:cls="clr-namespace:Anything.Class"
        xmlns:c="clr-namespace:Anything"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:Anything.UserControls"
        Title="Anything" 
        x:Name="MW" 
        Height="700" 
        Width="350" 
        AllowsTransparency="True" 
        Opacity="0.00001" 
        WindowStyle="None" 
        Background="#00000000" 
        WindowState="Normal"
        Loaded="Window_Loaded"   
        WindowStartupLocation="Manual" 
        VerticalAlignment="Top" 
        HorizontalAlignment="Left" 
        LocationChanged="Window_LocationChanged" 
        MouseMove="Me_MouseMove" 
        KeyDown="Me_KeyDown" 
        Closing="Me_Closing" 
        Activated="Me_Activated" GotFocus="MW_GotFocus" 
        >

    <Border x:Name="bdrMain" MouseLeave="bdrMain_MouseLeave" Background="Transparent">
        <Border Background="#ffFEFEFE" BorderThickness="2" CornerRadius="10">
            <Border x:Name="bdrMainForm" Background="#ff282828"
                        BorderThickness="2" CornerRadius="9"
                        AllowDrop="True"
                        DragEnter="bdrMainForm_DragEnter"
                        Drop="bdrMainForm_Drop">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="FunctionRD" Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--一二层-->
                    <Border x:Name="BdrFunction" Style="{DynamicResource BdrFunctionStyle}" Background="#00000000" 
                            Height="70" BorderThickness="1" BorderBrush="#01FFFFFF"
                            CornerRadius="5">
                        <StackPanel >
                            <!--第一层功能区-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0"
                                        Height="auto">

                                <!--Min-->
                                <Button x:Name="btnMin" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right"
                                        Click="btnMin_Click">
                                    <Line X1="5" Y1="20" X2="20" Y2="20" Stroke="#FFAAAAAA" StrokeThickness="2"/>
                                </Button>
                                <!--Max-->
                                <Button x:Name="btnMax" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Right" Click="btnMax_Click">
                                    <Border BorderThickness="2" Width="15" Height="15" Background="#ffAAAAAA">
                                        <Border BorderThickness="1" Width="10" Height="10" Background="#aa282828"/>
                                    </Border>
                                </Button>
                                <!--close-->
                                <Button x:Name="btnClose" Style="{StaticResource  ButtonStyle_Close}" HorizontalAlignment="Right" MouseLeave="btnClose_MouseLeave"
                                    Click="btnClose_Click">
                                    <Grid>
                                        <Line X1="6" Y1="6" X2="20"  Y2="20" Stroke="#FFAAAAAA"  StrokeThickness="2"/>
                                        <Line X1="6" Y1="6" X2="20"  Y2="20" Stroke="#FFAAAAAA"  StrokeThickness="2" RenderTransformOrigin="0.5,0.5">
                                            <Line.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform/>
                                                    <SkewTransform/>
                                                    <RotateTransform Angle="90"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </Line.RenderTransform>
                                        </Line>

                                    </Grid>

                                </Button>
                            </StackPanel>
                            <!--第一层功能区完-->

                            <!--第二层关键字检索区-->
                            <Canvas x:Name="cvsTxt">
                                <StackPanel Grid.Row="1" Canvas.Top="0" Canvas.Left="0" Width="{Binding ElementName=cvsTxt,Path=ActualWidth}">
                                    <TextBox x:Name="txtMain" 
                                     Canvas.Top="0"
                                     Canvas.Left="0"
                                     Background="Transparent" 
                                     Margin="10,0,10,5" 
                                     MinHeight="25"
                                     MaxHeight="25"
                                     Height="25"
                                     TextAlignment="Center" 
                                     FontSize="16" 
                                     CaretBrush="White"
                                     Foreground="White" 
                                     Text="Use keyword to search" 
                                         GotFocus="txtMain_GotFocus" 
                                         LostFocus="txtMain_LostFocus" 
                                         TextChanged="txtMain_TextChanged" 
                                         MouseMove="txtMain_MouseMove" KeyDown="txtMain_KeyDown" MouseUp="txtMain_MouseUp"
                                         MouseEnter="txtMain_MouseEnter" MouseLeave="txtMain_MouseLeave" 
                                     >
                                        <TextBox.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Search on the Web" Click="SearchWebMenuItem_Click"></MenuItem>
                                            </ContextMenu>
                                        </TextBox.ContextMenu>
                                    </TextBox>
                                </StackPanel>
                                <Button x:Name="btnSearch" Canvas.Right="10" Canvas.Top="0" Content="Search on Web"
                                        Style="{StaticResource NormalButtonStyle}" 
                                        Background="Transparent" Height="{Binding ElementName=txtMain,Path=ActualHeight}"
                                        FontSize="12" Margin="0" Visibility="Collapsed"
                                        BorderThickness="0" Click="btnSearch_Click"></Button>
                            </Canvas>
                            <!--第二层关键字检索区完-->

                        </StackPanel>
                    </Border>

                    <!--第四层常规项目区-->



                    <ScrollViewer x:Name="scrlist" Margin="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden"
                                  Grid.Row="3" KeyDown="scrlist_KeyDown" Height="auto"  >
                        <WrapPanel x:Name="Recent" Width="{Binding ElementName=scrlist, Path=Width,Mode=TwoWay}"></WrapPanel>
                        
                        

                        <ScrollViewer.ContextMenu>
                            <ContextMenu>

                                <MenuItem Header="{DynamicResource VEwndMainMNAddNew}"
                                          Click="AddNewMenuItem_Click"
                                          DataContext="">
                                    
                                </MenuItem>

                                <MenuItem Header="{DynamicResource VEwndMainMNExpandAll}" Click="ExpandAllMenuItem_Click"></MenuItem>

                                <MenuItem Header="{DynamicResource VEwndMainMNRetractAll}" Click="RetractAllMenuItem_Click"></MenuItem>
                                
                                <MenuItem 
                                    Header="{DynamicResource VEwndMainMNOtherFunction}">
                                    <MenuItem Header="{DynamicResource VEwndMainMNAddComputer}" 
                                              Click="AddComputerMenuItem_Click"></MenuItem>

                                    <MenuItem Header="{DynamicResource VEwndMainMNAddDocument}" 
                                              Click="AddMyDocumentMenuItem_Click"></MenuItem>

                                    <MenuItem Header="{DynamicResource VEwndMainMNAddRecycleBin}" 
                                              Click="AddRecycleBinMenuItem_Click"></MenuItem>

                                    <MenuItem Header="{DynamicResource VEwndMainMNAddControlPanel}" 
                                              Click="AddControlPanelMenuItem_Click"></MenuItem>

                                    <MenuItem Header="{DynamicResource VEwndMainMNAddNetworkNeighborhood}" 
                                              Click="AddNetworkNeighborhoodMenuItem_Click"></MenuItem>
                                </MenuItem>
                                
                                <MenuItem x:Name="Plugins" Header="{DynamicResource VEwndMainMNPlugins}">
                                </MenuItem>

                                <MenuItem x:Name="Languages" Header="{DynamicResource VEwndMainMNLanguages}" >
                                    
                                </MenuItem>


                                <MenuItem Header="{DynamicResource VEwndMainMNSettings}" Click="SettingsMenuItem_Click"></MenuItem>
                            </ContextMenu>
                        </ScrollViewer.ContextMenu>
                    </ScrollViewer>

                </Grid>
            </Border>
        </Border>
    </Border>
</Window>
