<UserControl x:Class="Anything.UserControls.ProgressBarEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Anything.UserControls"
             mc:Ignorable="d" 
             x:Name="Me"
             d:DesignHeight="25" d:DesignWidth="300">

    <Border x:Name="bdrOuter"
        Background="Transparent" Width="{Binding ElementName=Me,Path=ActualWidth}"
                Height="{Binding ElementName=Me,Path=ActualHeight}"
                BorderBrush="White"
                BorderThickness="2"
                CornerRadius="5">

        <Border x:Name="bdrInner"
            BorderThickness="1" CornerRadius="5"
                Width="0"
                Height="{Binding ElementName=spMain,Path=ActualHeight}"
                Margin="1"
                Background="#AC00FF00"
                HorizontalAlignment="Left">
        </Border>
    </Border>

</UserControl>
