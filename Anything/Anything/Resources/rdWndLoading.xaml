<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Anything.Resources">
    <Style x:Key="LoadingTextBlockFrontStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="96"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>

    </Style>

    <Style x:Key="LoadingTextBlockBackStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="96"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <BlurEffect Radius="12"></BlurEffect>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>